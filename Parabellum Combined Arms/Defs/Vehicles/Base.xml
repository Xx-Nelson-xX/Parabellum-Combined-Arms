	<!-- coaxial MG34 -->
	<Vehicles.VehicleTurretDef ParentName="PaCA_BaseTurret">
		<defName>PaCA_CMG34T</defName>
		<label>Coaxial MG34</label>
		<graphicData>
			<texPath>Vehicles/VFPH</texPath>
			<drawSize>(1,1)</drawSize>
		</graphicData>
		<genericAmmo>false</genericAmmo>
		<rotationSpeed>1.95</rotationSpeed>
		<ammunition>
			<thingDefs>
				<li>Ammo_8mmM_P88M</li>
				<li>Ammo_8mmM_SP</li>
				<li>Ammo_8mmM_KP</li>
				<li>Ammo_8mmM_BP</li>
			</thingDefs>
		</ammunition>
		<maxRange>56</maxRange>
		<reloadTimer>6.7</reloadTimer>
		<magazineCapacity>250</magazineCapacity>
		<warmUpTimer>1.4</warmUpTimer>
		<shotSound>Shot_MG34s</shotSound>
		<reloadSound>Interact_Rifle</reloadSound>
		<!--<projectile>Bullet_8mmM_SP</projectile>-->
