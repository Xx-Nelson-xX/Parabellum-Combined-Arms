				<li>
					<key>WaterDeep</key>
					<value>50</value>
				</li>
				<li>
					<key>WaterMovingChestDeep</key>
					<value>40</value>
				</li>
				<li>
					<key>WaterOceanShallow</key>
					<value>20</value>
				</li>
				<li>
					<key>WaterShallow</key>
					<value>10</value>
