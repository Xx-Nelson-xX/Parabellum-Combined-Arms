		<projectileOffset>-1.2</projectileOffset>
		<projectileShifting>
			<li>0</li>
		</projectileShifting>
		<recoil>
			<distanceTotal>0.01</distanceTotal>
			<distancePerTick>0.002</distancePerTick>
			<speedMultiplierPostRecoil>0.1</speedMultiplierPostRecoil>
		</recoil>
		<fireModes>
			<li>
				<shotsPerBurst>1</shotsPerBurst>
				<ticksBetweenShots>4</ticksBetweenShots>
				<ticksBetweenBursts>4</ticksBetweenBursts>
				<spreadRadius>0.15</spreadRadius>
				<label>Single</label>
				<texPath>UI/Gizmos/FireRate_Single</texPath>
			</li>
			<li>
				<shotsPerBurst>6</shotsPerBurst>
				<ticksBetweenShots>4</ticksBetweenShots>
				<ticksBetweenBursts>4</ticksBetweenBursts>
				<spreadRadius>0.65</spreadRadius>
				<label>Burst</label>
				<texPath>UI/Gizmos/FireRate_Burst</texPath>
			</li>
			<li>
				<shotsPerBurst>15</shotsPerBurst>
